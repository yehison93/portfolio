---
import "bootstrap/dist/css/bootstrap.min.css";
import Frame from "../components/Frame.astro";
import Main from "../components/Main.astro";
import "../styles/globalStyles.css";
import { ViewTransitions, fade } from "astro:transitions";
const { pageData } = Astro.props;
const currentDate = new Date();
const currentYear = currentDate.getFullYear();
import resources from "../resources/resources.json";
const data = resources.info.avatar;
import customColor from "../functions/customColor.js";

const colors = customColor();

const colorOne = colors.colorOne;
const colorTwo = colors.colorTwo;
const colorThree = colors.colorThree;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content={data.name} />
    <title>{`${pageData.title} ${pageData.subTitle}`.trim()}</title>
    <ViewTransitions />
  </head>
  <body>
    <Frame colors={colors} />
    <Main pageData={pageData} colors={colors}>
      <slot />
    </Main>
    <footer class="container-footer">
      <div class="copyright">&copy; By {data.name} - {currentYear}</div>
    </footer>
    <style is:global define:vars={{ colorOne, colorTwo, colorThree }}>
      :root {
        --colorOne: var(--colorone);
        --colorTwo: var(--colorTwo);
        --colorThree: var(--colorThree);
        --colorFour: #001020;
      }
    </style>
  </body>
</html>
