---
import Frame from "../components/Frame.astro";
import Main from "../components/Main.astro";
import "../styles/globalStyles.css";
import { ViewTransitions } from "astro:transitions";
import resources from "../resources/resources.json";
import Colors from "../components/Colors.jsx";
const { pageData } = Astro.props;
const currentDate = new Date();
const currentYear = currentDate.getFullYear();
const data = resources.info.avatar;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content=`Portafolio de ${data.name}, un desarrollador front-end con experiencia en HTML, CSS, JavaScript, React, Astro, entre otras. Descubre mis proyectos web y mas sobre mi aqui.`
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
    <link rel="icon" type="image/png" href="/faviconYehison.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content={data.name} />
    <title>{`${pageData.title} ${pageData.subTitle}`.trim()}</title>
    <ViewTransitions />
  </head>
  <body>
    <Frame />
    <Main pageData={pageData}>
      <slot />
    </Main>
    <footer class="container-footer">
      <div class="copyright">&copy; By {data.name} - {currentYear}</div>
    </footer>
    <Colors client:load />
  </body>
</html>
