---
import 'bootstrap/dist/css/bootstrap.min.css';
import "../styles/globalStyles.css";
import Frame from "../components/Frame.astro";
import Main from "../components/Main.astro"
import { ViewTransitions } from "astro:transitions";
import resources from "../resources/resources.json";
import Colors from "../components/Colors.jsx";
const { pageData } = Astro.props;
const currentDate = new Date();
const currentYear = currentDate.getFullYear();
const data = resources.info.avatar;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content={pageData.description || data.description}
    />
    <link rel="icon" type="image/png" href="/faviconYehison.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content={data.name} />
    <title>{`${pageData.title} ${pageData.subTitle}`.trim()}</title>
    <ViewTransitions />
  </head>
  <body id="main-body">
    <Frame />
    <Main pageData={pageData}>
      <slot />
    </Main>
    <footer class="container-footer">
      <div class="copyright">&copy; By {data.name} - {currentYear}</div>
    </footer>
    <Colors client:load />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous">
    </script>
  </body>
</html>

