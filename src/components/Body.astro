---
import Avatar from "./Avatar.astro";
import Contact from "./Contact.astro";
import Page from "../components/Page.astro";
const { pageData } = Astro.props;
---

<>
  <div class="container-fluid container-body">
    <div class="row">
      <div class="col-xs-12 col-xl-5 contaniner-contact-body">
        <Avatar />
        <Contact />
      </div>
      <div class="col-xs-12 col-xl-7 container-main-body">
        <Page pageData={pageData}>
          <slot />
        </Page>
      </div>
    </div>
  </div>
</>

<style>
  .contaniner-contact-body {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 80vh;
    gap: 50px;
    padding-right: 30px;
    margin: auto;
  }

  @media screen and (max-width: 1200px) {
    .contaniner-contact-body {
      height: 20vh;
    }
  }
</style>
