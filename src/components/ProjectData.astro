---
import Persons from "./Persons.astro"

const {projectData} = Astro.props
---

<div class="container">
  <div>
    <h3>Nombre:</h3>
    <ul class="vstack gap-3">
      <li class="position-relative">
        <span class="hstack gap-5">
          <h4>{projectData.title}</h4>
          <div class="underline" />
        </span>
        
      </li>
    </ul>
  </div>
  <>
    {
      projectData.authors && (
        <h3>{projectData.authors.length > 1 ? "Autores" : "Autor"}:</h3>
        <Persons dataPersons={projectData.authors}/>
      )
    }
  </>

  <>
    {
      projectData.collaborations && (
        <h3>{projectData.collaborations.length > 1 ? "Colaboradores" : "Colaborador"}:</h3>
        <Persons dataPersons={projectData.collaborations}/>
      )
    }
  </>
  

  <div>
    <h3>Proyecto:</h3>
    <ul class="vstack gap-3">
      <li class="position-relative">
        <span class="hstack gap-5">
          <h4>{projectData.typeProject}</h4>
          <div class="underline" />
        </span>
        
      </li>
    </ul>
  </div>
</div>