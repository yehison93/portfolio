---
import resources from "../resources/resources.json";
const data = resources.info.avatar;
---

<div class="container container-name-contact color-transition">
  <h1 class="container-first-name">
    {data.name.split(" ")[0]}
  </h1>
  <h1 class="container-last-name">
    {data.name.split(" ")[1]}
  </h1>
</div>

<style>
  .container-name-contact {
    max-width: calc(400px + 10vw);
    justify-content: center;
    margin: 0;
  }

  .container-first-name {
    cursor: none;
    font-size: calc(1rem + 5vw);
    text-align: start;
    line-height: 1;
    padding: 0;
  }
  .container-last-name {
    cursor: none;
    font-size: calc(1rem + 5vw);
    text-align: end;
    line-height: 1;
    padding: 0;
  }

  .color-transition {
    color: white;
    background: linear-gradient(
      to right,
      var(--colorOne),
      var(--colorTwo),
      var(--blueFour)
    );
    -webkit-background-clip: text;
    transition: color 5s ease-in-out;
  }

  .color-transition:hover {
    color: rgba(255, 255, 255, 0.1);
    background: linear-gradient(
      to right,
      var(--colorOne),
      var(--colorTwo),
      var(--blueFour)
    );
    -webkit-background-clip: text;
    transition: color 1s ease-in-out;
  }
  @media screen and (max-width: 1200px) {
    .container-name-contact {
      max-width: calc(300px + 10vw);
    }
  }
  @media screen and (max-width: 768px) {
    .container-name-contact {
      max-width: calc(150px + 20vw);
    }
    .container-first-name {
      margin: -5px 0;
    }
    .container-last-name {
      margin: -5px 0;
    }

    .color-transition {
      color: rgba(255, 255, 255, 0.1);
      background: linear-gradient(
        to right,
        var(--colorOne),
        var(--colorTwo),
        var(--blueFour)
      );
      -webkit-background-clip: text;
    }
  }
</style>
