---
import Underline from "./Underline.astro";
const { pageData } = Astro.props;
---

<>
  <main class="container-fluid container-page">
    <div class="container-titles">
      <h2 class="container-title display-5">{pageData.title}</h2>
      <h1 class="container-subtitle display-2">{pageData.subTitle}</h1>
    </div>

    <Underline marginLine="150px" />
    <div class="container-main">
      <slot />
    </div>
  </main>
</>
<style>
  .container-page {
    position: relative;
    height: 100vw;
    overflow: hidden;
  }

  .container-main {
    /* position: fixed; */
    /* top: 0; */
    display: flex;
    justify-content: center;
    align-items: center;
    align-content: center;
    text-align: justify;
    margin: auto;
    hyphens: auto;
    height: 60vh;
    width: 50vw;
    overflow: scroll;
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .container-main::-webkit-scrollbar {
    display: none;
  }

  @media screen and (max-width: 786px) {
    .container-main {
      bottom: unset;
      height: 500px;
      width: 80vw;
    }
  }
</style>
