---
const { projectCode } = Astro.props;
---

<div class="container">
  {
    projectCode.map((item) => (
      <div class="row">
        <script is:inline data-astro-rerun src={item} />
      </div>
    ))
  }
  <div class="alert alert-info" role="alert">
    Si no ha cargado el bloque de c√≥digo <a
      class="alert-link alert-refresh"
      id="refresh-link">refresca la pagina</a
    >
  </div>
  <script is:inline>
    document.getElementById("refresh-link").addEventListener("click", () => {
      location.reload();
    });
  </script>
</div>

<style>
  .alert-refresh:hover {
    transform: scale(1.2);
    cursor: pointer;
  }
</style>
