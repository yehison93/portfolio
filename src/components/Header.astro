---
const logo = "/src/assets/image/Yehison-05.png";
---

<header>
  <nav class="container-fluid bg-body-trasnparent">
    <div class="row">
      <div class="col container-logo-header">
        <a class="navbar-brand" href="#">
          <img
            src={logo}
            alt="Logo"
            class="d-inline-block align-text-top image-logo"
          />
        </a>
      </div>
      <div class="col container-icon-header">
        <button class="navbar-toggler button-header" type="button">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="currentColor"
            class="bi bi-list"
            viewBox="0 0 16 16"
          >
            <path
              fill-rule="evenodd"
              d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5"
            ></path>
          </svg>
        </button>
      </div>
    </div>
  </nav>
</header>

<style>
  .container-logo-header {
    display: flex;
    justify-content: start;
    align-items: center;
  }
  .container-icon-header {
    display: flex;
    justify-content: end;
    align-items: center;
  }

  .image-logo {
    width: calc(4rem + 5vw);
  }

  .button-header {
    color: aliceblue;
    width: 3rem;
  }
</style>
