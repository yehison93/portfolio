---
import { ExclamationOctagonFill } from "react-bootstrap-icons";
import Layout from "../layouts/Layout.astro";
const pageData = {
  title: "oh oh!",
  subTitle: "404",
  description: "",
};
---

<Layout pageData={pageData}>
  <div class="text-center">
    <ExclamationOctagonFill
      style={{ fill: "var(--colorOne) " }}
      className="display-1"
    />
    <h1>Aquí no está lo que buscas.</h1>
    <h3>Te redirigiré al menú en:</h3>
    <h1 id="contador" class="display-1">10</h1>
    <h3>segundos</h3>
    <script>
      const TimeAll = 11;

      let tiempoRestante = TimeAll;

      const actualizarContador = () => {
        tiempoRestante--;
        document.getElementById("contador").textContent = tiempoRestante;

        if (tiempoRestante === 0) {
          clearInterval(interval);
          window.location.href = "/menu";
        }
      };
      const interval = setInterval(actualizarContador, 1000);
    </script>
  </div>
</Layout>
