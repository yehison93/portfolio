---
import Layout from "../../layouts/Layout.astro";
import Projects from "../../components/Projects.astro";
import type { ImageMetadata } from "astro";
import { Github, Link, Instagram, Linkedin } from "react-bootstrap-icons";

// Configuración del proyecto
const projectConfig = {
  title: "ActivEye",
  subTitle: "Proyecto de Yehison Perdomo",
  description: "Página que muestra información sobre el proyecto ActivEye",
};

// Datos del proyecto
const projectData = {
  title: projectConfig.title,
  authors: [
    {
      name: "Yehison Perdomo",
    },
  ],
  shortDescription: "App Web VR para tratar la Ambliopía",
  largeDescription: [
    "ActivEye en español es algo similar a ojo activo, surge de la oposición a ojo vago, forma en como también se le conoce a la Ambliopía.",
    "La idea de esta App surgió de los Drs. oftalmólogos José Campos y José Zerpa, quienes también colaboraron en este proyecto como asesores.",
    "El funcionamiento de esta App se basa en la posibilidad de hacer una terapia de parche virtual, viendo por un ojo canales de IPTV (el ojo que estará haciendo la terapia), mientras por el otro ojo no verá nada. Esto será posible mientras el usuario pueda usar su teléfono inteligente con un Cardboard o un casco de realidad virtual.",
  ],
  skills: [
    "React",
    "CSS",
    "HTML",
    "Vite",
    "A-Frame",
    "Three.js",
    "Bootstrap",
    "Firebase",
    "VR",
    "3D",
    "IPTV",
    "HLS",
    "Oftalmología",
    "Ambliopía",
    "Ojo Vago",
    "App Web",
  ],
  typeProject: "Privado",
};

// Datos de las redes sociales
const socialMediaData = [
  {
    name: "App Web",
    icon: Link,
    link: "https://activeye-one.vercel.app/",
  },
];

// Datos de los colaboradores
const collaborationsData = [
  {
    name: "Dr. José Campos",
    socialMedia: [
      {
        name: "Instagram",
        icon: Instagram,
        link: "https://www.instagram.com/alexcamps/?hl=es-la",
      },
      {
        name: "Linkedin",
        icon: Linkedin,
        link: "https://ve.linkedin.com/in/jos%C3%A9-alexander-campos-271023162",
      },
    ],
  },
  {
    name: "Dr. Alberto Zerpa",
    socialMedia: [
      {
        name: "Instagram",
        icon: Instagram,
        link: "https://www.instagram.com/albe1912/?hl=es-la",
      },
    ],
  },
];

// Datos de las imágenes
const images = import.meta.glob<{ default: ImageMetadata }>(
  "../../assets/projects/ActivEye/*.{jpeg,jpg,png,gif}"
);
const imagesItems = Object.keys(images);

// Datos del carrusel
const carouselsData = {
  data: imagesItems.map((item, index) => {
    return {
      title: null,
      description: `Imagen del proyecto ActivEye 0${index + 1}`,
      imageLink: "https://activeye-one.vercel.app/",
      imagePath: imagesItems,
    };
  }),
  allImages: images,
};

// Código del proyecto
const projectCode = [
  "https://gist.github.com/yehison93/0505470841ca6f439aadfd8671680cb8.js",
  "https://gist.github.com/yehison93/6ee55b0b61d30c54ab21459c740e74b7.js",
];

// Página
const pageData = {
  title: projectConfig.title,
  subTitle: projectConfig.subTitle,
  description: projectConfig.description,
};
---

<Layout pageData={pageData}>
  <Projects
    projectData={{
      ...projectData,
      carouselsData,
      dataSocialMedia: socialMediaData,
      collaborations: collaborationsData,
      projectCode,
    }}
  />
</Layout>;

