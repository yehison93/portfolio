---
import Layout from "../../layouts/Layout.astro";
import Projects from "../../components/Projects.astro";
import type { ImageMetadata } from "astro";
import { Linkedin } from "react-bootstrap-icons";

// Configuración del proyecto
const projectConfig = {
  title: "Proyecto",
  subTitle: "PokerWall",
  description: "Página que muestra información sobre el proyecto PokerWall",
};

// Datos del proyecto
const projectData = {
  title: projectConfig.title,
  subTitle: projectConfig.subTitle,
  authors: [
    {
      name: "Yehison Perdomo",
    },
  ],
  shortDescription: "Muro de información sobre apuestas de Poker",
  largeDescription: [
    "Poker Wall o muro de Poker, es una App Web que muestra información sobre apuestas de poker en diferentes modalidades. ",
    "Consta de dos pantallas, una para clientes y la otra para el administrador. En la pantalla de los clientes se muestra todo lo referente a las apuestas y esta se actualiza en vivo a medida de que los parámetros de las apuestas vayan cambiando. El panel de administración, es un formulario con opciones para modificar los datos que se mostraran en la pantalla de clientes",
    "Esta App tiene el fin de usarse en pantallas en las salas de Poker o desde los dispositivos móviles de los jugadores y administradores",
    "Se usó la herramienta de compilación Vite y el FrameWork React para su construcción, junto con Bootstrap para potenciar los estilos de la app.",
  ],
  skills: [
    "React",
    "CSS",
    "HTML",
    "Vite",
    "Bootstrap",
    "Firebase",
    "App Web",
    "Diseño",
    "Java Script",
    "Web Socket",
    "Poker",
    "Casinos",
  ],
  typeProject: "Privado",
  state: "En construcción",
};

// Datos de las redes sociales
const socialMediaData = null;

// Datos de los colaboradores
const collaborationsData = [
  {
    name: "DG. Emily Castro",
    socialMedia: [
      {
        name: "LinkedIn",
        icon: Linkedin,
        link: "https://www.linkedin.com/in/emilyda-castrog/",
      },
    ],
  },
];

// Datos de las imágenes
const images = import.meta.glob<{ default: ImageMetadata }>(
  "../../assets/projects/PokerWall/*.{jpeg,jpg,png,gif.mp4}"
);
const imagesItems = Object.keys(images);

// Datos del carrusel
const carouselsData = {
  data: imagesItems.map((item, index) => {
    return {
      title: null,
      description: `Imagen del proyecto PokerWall 0${index + 1}`,
      imageLink: null,
      imagePath: imagesItems,
    };
  }),
  allImages: images,
};

// Código del proyecto
const projectCode = [
  "https://gist.github.com/yehison93/958e26be4a888c6c3fc361552f11dc1a.js",
  "https://gist.github.com/yehison93/a31645402f7657dacf4da40abfb42cfc.js",
];

// Página
const pageData = {
  title: projectConfig.title,
  subTitle: projectConfig.subTitle,
  description: projectConfig.description,
};
---

<Layout pageData={pageData}>
  <Projects
    projectData={{
      ...projectData,
      carouselsData,
      dataSocialMedia: socialMediaData,
      collaborations: collaborationsData,
      projectCode,
    }}
  />
</Layout>;

