---
import Layout from "../../layouts/Layout.astro";
import Projects from "../../components/Projects.astro";
import type { ImageMetadata } from "astro";
import { Link, Instagram, Linkedin, Github } from "react-bootstrap-icons";

// Configuración del proyecto
const projectConfig = {
  title: "Proyecto",
  subTitle: "Calculator App",
  description:
    "Página que muestra información sobre el proyecto Calculator App",
};

// Datos del proyecto
const projectData = {
  title: projectConfig.title,
  subTitle: projectConfig.subTitle,
  authors: [
    {
      name: "Yehison Perdomo",
    },
  ],
  shortDescription: "Calculadora Tradicional",
  largeDescription: [
    `Se trata de un proyecto requerido para aprobar el certificado de "Front End Development Libraries"de FreeCodeCamp.`,
    "Esta aplicación de calculadora permite a los usuarios realizar operaciones básicas de matemáticas, como sumas, restas, multiplicaciones y divisiones, y también operaciones con decimales. La aplicación cuenta con una pantalla que muestra el resultado de las operaciones y un panel de botones para introducir números y operadores.",
  ],
  skills: [
    "React",
    "CSS",
    "HTML",
    "Vite",
    "Bootstrap",
    "App Web",
    "Diseño",
    "Java Script",
    "Calculator",
    "Math.js",
  ],
  typeProject: "Público",
  state: "Publicado",
};

// Datos de las redes sociales
const socialMediaData = [
  {
    name: "App Web",
    icon: Link,
    link: "https://calculator-app-one.netlify.app/",
  },
  {
    name: "App Web",
    icon: Github,
    link: "https://github.com/yehison93/calculator-app",
  },
];

// Datos de los colaboradores
const collaborationsData = null;

// Datos de las imágenes
const images = import.meta.glob<{ default: ImageMetadata }>(
  "../../assets/projects/CalculatorApp/*.{jpeg,jpg,png,gif}"
);
const imagesItems = Object.keys(images);

// Datos del carrusel
const carouselsData = {
  data: imagesItems.map((item, index) => {
    return {
      title: null,
      description: `Imagen del proyecto CalculatorApp 0${index + 1}`,
      imageLink: "https://calculator-app-one.netlify.app/",
      imagePath: imagesItems,
    };
  }),
  allImages: images,
};

// Código del proyecto
const projectCode = [
  "https://gist.github.com/yehison93/7baf5157999310a7e42bc645c7eccb0c.js",
  "https://gist.github.com/yehison93/1a43fcf656f6e0c0071134b1c12551f1.js",
];

// Página
const pageData = {
  title: projectConfig.title,
  subTitle: projectConfig.subTitle,
  description: projectConfig.description,
};
---

<Layout pageData={pageData}>
  <Projects
    projectData={{
      ...projectData,
      carouselsData,
      dataSocialMedia: socialMediaData,
      collaborations: collaborationsData,
      projectCode,
    }}
  />
</Layout>;

